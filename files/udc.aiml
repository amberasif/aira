    <!-- Recommendation categories for books -->
    <category>
        <pattern>Mystery</pattern>
        <template>
            Great choice! Mystery books are thrilling.<delay>4</delay>
            Now, would you like a classic mystery or a modern mystery?<delay>4</delay>
            <reply>
                <text>Classic Mystery</text>
                <postback>Classic Mystery</postback>
            </reply>

            <reply>
                <text>Modern Mystery</text>
                <postback>Modern Mystery</postback>
            </reply>
        </template>
    </category>

    <category>
        <pattern>Science Fiction</pattern>
        <template>
            Excellent! Science fiction is a fascinating genre.<delay>4</delay>
            Would you prefer space exploration or futuristic technology in your science fiction book?<delay>4</delay>
            <reply>
                <text>Space Exploration</text>
                <postback>Space Exploration</postback>
            </reply>

            <reply>
                <text>Futuristic Technology</text>
                <postback>Futuristic Technology</postback>
