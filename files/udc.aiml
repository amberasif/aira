    <!-- Book recommendations based on user preferences -->
    <category>
        <pattern>Classic Mystery</pattern>
        <template>
            I recommend "Sherlock Holmes" by Arthur Conan Doyle. It's a classic mystery series.
        </template>
    </category>

    <category>
